@model Signal_Mood.Models.Statistic

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table class="table">
    @{
        var weekDays = Enum.GetValues(typeof(DayOfWeek));
    }
    
        <tr>
            @foreach (var day in weekDays)
            {
                <td>
                    @day.ToString()
                </td>
            }
        </tr>
        <tr>
            @foreach (var day in weekDays)
            {
                <td>@Model.DayStats((DayOfWeek)day)</td>
            }
        </tr>
    </table>
</body>
</html>
